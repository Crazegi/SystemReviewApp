<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SystemReview.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer Padding="32,24,32,32">
        <StackPanel Spacing="24" MaxWidth="700" HorizontalAlignment="Left">

            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- Theme -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="20">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE790;" FontSize="20" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock Text="App Theme" FontWeight="SemiBold"/>
                        <RadioButtons x:Name="ThemeRadio" SelectionChanged="ThemeRadio_SelectionChanged">
                            <RadioButton Content="Use system setting" Tag="Default"/>
                            <RadioButton Content="Light" Tag="Light"/>
                            <RadioButton Content="Dark" Tag="Dark"/>
                        </RadioButtons>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Auto-load -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="20">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE72C;" FontSize="20" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Behavior" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <ToggleSwitch x:Name="AutoLoadToggle" Header="Auto-load data when switching tabs"
                                  IsOn="True" Toggled="AutoLoadToggle_Toggled"/>
                </StackPanel>
            </Border>

            <!-- About -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE946;" FontSize="20" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="About" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <TextBlock Text="SystemReview" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Version 1.2.0" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Text="A comprehensive system diagnostics and monitoring tool for Windows. Built with WinUI 3 and .NET 10."/>
                    <HyperlinkButton Content="View on GitHub" NavigateUri="https://github.com/Crazegi/SystemReviewApp"/>
                    <TextBlock Text="Made by Crazegi" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SystemReview.Views.SystemSpecsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer Padding="16">
        <StackPanel Spacing="16">
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="RefreshBtn" Content="ðŸ”„ Refresh All" Click="RefreshBtn_Click" Grid.Column="0" Style="{StaticResource AccentButtonStyle}"/>
                <Button x:Name="ExportJsonBtn" Content="ðŸ“‹ Export JSON" Click="ExportJsonBtn_Click" Grid.Column="1"/>
                <Button x:Name="ExportTextBtn" Content="ðŸ“ Export Text" Click="ExportTextBtn_Click" Grid.Column="2"/>
                <TextBlock x:Name="StatusText" Grid.Column="3" VerticalAlignment="Center" Margin="12,0,0,0" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>

            <!-- CPU -->
            <TextBlock Text="ðŸ–¥ï¸ Processor (CPU)" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="CpuList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Grid.Column="0" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Cores, Converter={x:Null}}" Grid.Column="1"/>
                            <TextBlock Text="{Binding MaxSpeed}" Grid.Column="2"/>
                            <TextBlock Text="{Binding Architecture}" Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- RAM -->
            <TextBlock Text="ðŸ§  Memory (RAM)" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="RamList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                            <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- GPU -->
            <TextBlock Text="ðŸŽ® Graphics (GPU)" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="GpuList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Grid.Column="0" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DriverVersion}" Grid.Column="1"/>
                            <TextBlock Text="{Binding AdapterRam}" Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Drives -->
            <TextBlock Text="ðŸ’¾ Storage Drives" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="DriveList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/><ColumnDefinition Width="*"/><ColumnDefinition Width="80"/><ColumnDefinition Width="100"/><ColumnDefinition Width="100"/><ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Grid.Column="0" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Label}" Grid.Column="1"/>
                            <TextBlock Text="{Binding FileSystem}" Grid.Column="2"/>
                            <TextBlock Text="{Binding TotalSize}" Grid.Column="3"/>
                            <TextBlock Text="{Binding FreeSpace}" Grid.Column="4"/>
                            <ProgressBar Value="{Binding UsedPercent}" Maximum="100" Grid.Column="5" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- OS -->
            <TextBlock Text="ðŸªŸ Operating System" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="OsList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                            <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Motherboard -->
            <TextBlock Text="ðŸ”§ Motherboard / BIOS" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="MbList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                            <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Display -->
            <TextBlock Text="ðŸ–¥ï¸ Display" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ListView x:Name="DisplayList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                            <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>